{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Audit FFI Boundary",
      "type": "shell",
      "command": "npx",
      "args": ["tsx", "modules/veloqrs/scripts/audit-ffi.ts", "--vscode"],
      "group": "build",
      "presentation": {
        "reveal": "silent",
        "panel": "shared",
        "showReuseMessage": false
      },
      "problemMatcher": {
        "owner": "ffi-audit",
        "severity": "warning",
        "fileLocation": ["absolute"],
        "pattern": {
          "regexp": "^(.+?):(\\d+):(\\d+):\\s*(warning|error|info):\\s*(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    },
    {
      "label": "Audit FFI Boundary (verbose)",
      "type": "shell",
      "command": "npx",
      "args": ["tsx", "modules/veloqrs/scripts/audit-ffi.ts"],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": []
    }
  ]
}
